#:set padding_x_data -40

<Welcome>:
	logLabel: logLabel_id
	canvas.before:
		Color:
			# 51 51 51
			rgba: 0.208, 0.208, 0.208, 1
		Rectangle:
			pos: self.pos
			size: self.size
	
	BoxLayout:
		orientation: 'vertical'
		spacing: '50sp'
		Label:
			text: " "
			size_hint_y: 0.2
			
		Label:
			text: "Mobile App"
			font_size: '50sp'
			font_name: "fonts/segoe_ui_light.ttf"
			size_hint_y: 0.2
			color: (1, 1, 1, 0.95)
			
		Label:
			text: "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
			font_name: "fonts/segoe_ui_light.ttf"
			font_size: '18sp'
			halign: 'left'
			size_hint_y: 0.2
			text_size: (self.width + (2*padding_x_data), None)
			color: (1, 1, 1, 0.5)
		Label:
			text: " "
			size_hint_y: 0.4
		

		BoxLayout:
			## reduction de la taille du bouton
			size_hint_x: 0.8
			size_hint_y: None
			height: '60sp'
			
			##Â position au centre
			pos_hint: {'center_x':.5, 'center_y': .5}
			
			orientation: 'vertical'
			Button: 
				id: enterButton
				# 0 142 215
				background_color: 0, 0.557 , 0.843, 1
				background_normal: ""
				background_down: ""
				
				text: "Welcome"
				font_size: '30sp'
				color: (1, 1, 1, 1)
				
				on_press: root.do_enter()
			
		Label:
			id: logLabel_id
			text: " "

			size_hint_y: None
			height: '20sp'
			font_size: '12sp'
			color: (0, 0, 0, 0.5)
