%[kind : views-old]
%[file : list%%(self.obName.lower())%%s.kv]
%[path : screens/%%(self.obName.lower())%%sScreen]
<List%%(self.obName)%%s>:
	logLabel: logLabel_id
	containerListView: list_id

	BoxLayout:
		orientation: 'vertical'
		ActionBar:
			pos_hint: {'top':1}
			ActionView:
				use_separator: True
				ActionPrevious:
					title: '%%(self.displayName)%%'
					#with_previous: False
					on_press: root.manager.back()
					previous_image: "images/ic_action_previous_item.png"
					app_icon: "images/ic_action_icon.png"
				
				ActionOverflow:
				
				ActionButton:
					text: 'Refresh'
					icon: "images/ic_action_refresh.png"
					on_press: root.refresh()

				
			
		ListView:
			id: list_id
			
		# Log line
		Label: 
			id: logLabel_id
			text: ""
			
			size_hint_y: None
			height: '20sp'
			font_size: '12sp'
		