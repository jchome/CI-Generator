%[kind : views]
%[file : list%%(self.obName.lower())%%s.kv]
%[path : screens/%%(self.obName.lower())%%sScreen]
<List%%(self.obName)%%s>:
	logLabel: logLabel_id
	containerListView: list_id

	BoxLayout:
		orientation: 'vertical'

		ActionBar:
			pos_hint: {'top':1}
			ActionView:
				use_separator: True
				ActionPrevious:
					title: '%%(self.displayName)%%'
					on_press: root.manager.go_back()
					app_icon: "images/icon.png"
					previous_image: "images/ic_action_previous_item.png"
				
				ActionOverflow:
				
				ActionButton:
					text: 'Refresh'
					icon: "images/ic_action_refresh.png"
					on_press: root.refresh()
				
				ActionButton:
					text: 'New'
					icon: "images/ic_action_new.png"
					on_press: root.newItem()
					
		# Small Padding
		Label:
			text: " "
			size_hint_y: None
			height: '6sp'
			
		ListView:
			id: list_id
			
		# Log line
		Label: 
			id: logLabel_id
			text: ""
			
			size_hint_y: None
			height: '20sp'
			font_size: '12sp'
		
