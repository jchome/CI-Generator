%[kind : views]
%[file : list%%(self.obName.lower())%%s.kv]
%[path : screens/%%(self.obName.lower())%%sScreen]
<List%%(self.obName)%%s>:
	logLabel: logLabel_id
	containerListView: list_id

	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'horizontal'
			canvas.before:
				Color:
					rgba: 1, 1, 1, 0.1
				Rectangle:
					pos: self.pos
					size: self.size
			height: '48sp'
			size_hint_y: None
			Button:
				background_color: 1,1,1, 1
				background_normal: "images/ic_action_back.png"
				background_down: "images/ic_action_back.png"
				border: 0,0,0,0
				on_press: root.back()
				size_hint_x: None
				width: '24sp'
				padding_y: '10sp'
				
			Button:
				text: '%%(self.displayName)%%'
				background_color: 0,0,0, 0
				background_normal: ""
				background_down: ""
				color: (1, 1, 1, 1)
				on_press: root.back()
				size_hint_x: 0.2
				
				
			#ActionOverflow:
			Label:
				text: ''
				size_hint_x: 1
				
			Button:
				#text: 'Refresh'
				background_normal: "images/ic_action_refresh.png"
				background_down: "images/ic_action_refresh.png"
				border: 0,0,0,0
				on_press: root.refresh()
				size_hint_x: None
				width: '48sp'
				
			
		ListView:
			id: list_id
			
		# Log line
		Label: 
			id: logLabel_id
			text: ""
			
			size_hint_y: None
			height: '20sp'
			font_size: '12sp'
		